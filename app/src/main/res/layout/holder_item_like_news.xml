<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/space_size_6"
        android:layout_marginStart="@dimen/space_size_8"
        android:layout_marginEnd="@dimen/space_size_8"
        android:layout_marginBottom="@dimen/space_size_2"
        app:cardBackgroundColor="@color/colorCard"
        app:contentPadding="@dimen/space_size_6"
        app:cardElevation="@dimen/space_size_2"
        app:cardCornerRadius="@dimen/space_size_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/list_item_news_list_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/likeNewsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <com.shui.nasor.Widget.SquareImageView
                    android:id="@+id/likeNewsImageView"
                    android:layout_toRightOf="@+id/likeTVTitle"
                    android:layout_width="@dimen/list_image_size"
                    android:layout_height="@dimen/list_image_size" />
            </LinearLayout>
            <TextView
                android:id="@+id/likeNewsTVFrom"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="@dimen/space_size_3"
                android:layout_below="@+id/list_item_news_list_top_layout"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/likeNewsTvTime"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="@dimen/space_size_3"
                android:layout_below="@+id/list_item_news_list_top_layout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>