<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/infoAppBarLayout"
            android:fitsSystemWindows="true"
            android:transitionName="shareView"
            android:layout_height="wrap_content">
                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:id="@+id/infoCollapsingToolbarLayouts"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_height="@dimen/detail_image_height"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleTextAppearance="@style/TextAppearance.ExpandedTitle"
                    app:expandedTitleMargin="@dimen/extend_title_margin"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">
                        <FrameLayout
                            android:background="@android:color/white"
                            app:layout_collapseMode="parallax"
                            app:layout_collapseParallaxMultiplier="0.8"
                            app:layout_scrollFlags="scroll|snap|enterAlways|enterAlwaysCollapsed"
                            android:fitsSystemWindows="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                    android:background="@drawable/info_bg"
                                    android:id="@+id/infoIVHeader"
                                    android:scaleType="centerCrop"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp" />
                                 <com.shui.nasor.Widget.CircleImageView
                                     android:id="@+id/infoCIVAvatar"
                                     android:layout_below="@+id/infoIVHeader"
                                     android:layout_marginTop="-40dp"
                                     android:layout_marginLeft="20dp"
                                     android:layout_width="80dp"
                                     android:layout_height="80dp" />
                                <LinearLayout
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/infoTVName"
                                            android:textSize="@dimen/text_size_big"
                                            android:textColor="@color/main_black"
                                            android:layout_margin="@dimen/space_size_5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                        <LinearLayout
                                            android:paddingLeft="@dimen/space_size_5"
                                            android:layout_margin="@dimen/space_size_5"
                                            android:orientation="horizontal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <TextView
                                                    android:textSize="@dimen/text_size_normal"
                                                    android:textColor="@color/comment_text"
                                                    android:id="@+id/infoTVFollower"
                                                    android:layout_marginRight="@dimen/space_size_15"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                                                <TextView
                                                    android:textSize="@dimen/text_size_normal"
                                                    android:textColor="@color/comment_text"
                                                    android:id="@+id/infoTVFans"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />
                                        </LinearLayout>
                                        <TextView
                                            android:paddingLeft="@dimen/space_size_5"
                                            android:textSize="@dimen/text_size_normal"
                                            android:textColor="@color/comment_text"
                                            android:id="@+id/infoTVSign"
                                            android:layout_margin="@dimen/space_size_5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                 </LinearLayout>
                                        <Button
                                            android:text="个人资料"
                                            android:id="@+id/infoBTNInfo"
                                            android:textColor="@color/main_black"
                                            android:layout_below="@id/infoIVHeader"
                                            android:layout_alignParentRight="true"
                                            android:background="@drawable/edit_bg"
                                            android:layout_margin="@dimen/fab_margin"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                </RelativeLayout>
                        </FrameLayout>
                        <!--  app:popupTheme="@style/ThemeOverlay.AppCompat.Light"   设置 toolbar的弹出样式-->
                        <android.support.v7.widget.Toolbar
                            android:id="@+id/infoToolbar"
                            android:layout_width="match_parent"
                            app:layout_collapseMode="pin"
                            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_height="?attr/actionBarSize">
                                <TextView
                                    android:id="@+id/infoTVToolbar"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/text_size_big"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </android.support.v7.widget.Toolbar>
                </android.support.design.widget.CollapsingToolbarLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_size_1"
                            android:background="@drawable/common_list_divider"
                            />
                        <android.support.design.widget.TabLayout
                         android:id="@+id/infoVpTab"
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:background="@android:color/white"
                        app:tabIndicatorColor="@color/colorAccent"
                          app:tabSelectedTextColor="@color/colorAccent"
                        app:tabTextColor="@android:color/black"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_size_1"
                            android:background="@drawable/common_list_divider"
                            />
                </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/infoNestedScrollView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:scrollbars="vertical"
            android:background="@color/colorBackground"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                                <com.shui.nasor.Widget.WrapContentHeightViewPager
                                    android:id="@+id/infoVpPager"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    />
                </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>