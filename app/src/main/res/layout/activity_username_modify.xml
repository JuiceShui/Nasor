<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_toolbar"/>
    <RelativeLayout
        android:padding="@dimen/space_size_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/modify_tiet_name"
            android:layout_margin="@dimen/space_size_10"
            android:hint="@string/modify_name_hint"
            android:padding="@dimen/space_size_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/modify_tiet_name"
            android:layout_marginTop="@dimen/space_size_10"
            android:layout_alignParentRight="true"
            android:id="@+id/modify_tv_name_alert"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>