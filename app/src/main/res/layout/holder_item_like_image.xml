<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/space_size_6"
        android:layout_marginStart="@dimen/space_size_8"
        android:layout_marginEnd="@dimen/space_size_8"
        android:layout_marginBottom="@dimen/space_size_2"
        app:cardBackgroundColor="@color/colorCard"
        app:contentPadding="@dimen/space_size_6"
        app:cardElevation="@dimen/space_size_2"
        app:cardCornerRadius="@dimen/space_size_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/likePicImageView"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/imageview_like_height" />
            <TextView
                android:id="@+id/likePicTVFrom"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="@dimen/space_size_6"
                android:layout_width="match_parent"
                android:textColor="@color/comment_text"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>