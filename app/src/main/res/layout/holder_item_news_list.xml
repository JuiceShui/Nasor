<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_item_bg_selector"
    android:paddingTop="@dimen/space_size_8"
    android:paddingBottom="@dimen/space_size_8"
    android:paddingLeft="@dimen/space_size_12"
    android:paddingRight="@dimen/space_size_12">
    <LinearLayout
        android:id="@+id/list_item_news_list_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_size_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_news_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"/>

        <ImageView
            android:background="@drawable/afternoon"
            android:id="@+id/list_item_news_list_image"
            android:layout_width="@dimen/news_image_width"
            android:layout_height="@dimen/news_image_height"
            android:layout_marginLeft="@dimen/space_size_8"
            android:scaleType="centerCrop"/>
    </LinearLayout>


    <TextView
        android:id="@+id/list_item_news_list_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_news_list_top_layout"
        android:layout_alignParentLeft="true"
        android:textColor="@color/list_item_news_list_source_color"
        android:textSize="@dimen/text_size_small"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/list_item_news_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_news_list_top_layout"
        android:layout_alignParentRight="true"
        android:textColor="@color/list_item_news_list_date_color"
        android:textSize="@dimen/text_size_small"
        android:maxLines="1"/>
</RelativeLayout>